[colors]
background = #00
#background = #aa2f343f
background-alt = #3306080a
foreground = #dfdfdf
foreground-alt = #dfdfdf
primary = #ffffff
alert = #bf5151
;f7768e

[bar/top]
height = 27
width=1910
offset-x = 0.25%
offset-y = 1%

background = ${colors.background}

border-size = 0
border-color = #00000000

padding-right = 2


module-margin-left = 1
module-margin-right = 1

font-0= FiraCode Nerd Font:size=12;1

modules-left = bspwm
modules-center = xwindow
modules-right = network pulseaudio wlan battery date

wm-restack = bspwm

[module/xwindow]
type = internal/xwindow
label = %title%
label-maxlen = 90 
;label = %title:0:30:...%


[module/network]
type = internal/network
interface = wlo1 
interval = 1.0
label-connected = "%downspeed% %upspeed%"
label-disconnected = disconnected


[module/bspwm]
type = internal/bspwm
pin-workspaces = true

label-focused = %index%
label-focused-background = #aa151B1B
;${colors.background-alt}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%*
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %index%
label-empty-padding = 2

[module/wlan]
type = internal/network
interface = wlo1
interval = 5
format-connected =  <label-connected>
label-connected = %essid%
format-disconnected = 睊
padding-left = 2

[module/eth]
type = internal/network
interface = eno1
interval = 10
label-connected = %local_ip%
format-disconnected = 

[module/date]
type = internal/date
interval = 1 

;"%a %b %d"
date = "%Y-%m-%d"
date-alt = %a, %d %b %Y


time-alt = %H:%M:%S

time = %I:%M:%p

label = %date%  %time%


[module/pulseaudio]
type = internal/pulseaudio

sink = alsa_output.pci-0000_12_00.3.analog-stereo

use-ui-max = true

interval = 5

format-volume = <label-volume>
;<ramp-volume> 
label-volume = %percentage%%
label-muted = muted

ramp-volume-0 =
ramp-volume-1 =
ramp-volume-2 =

;click-middle =
click-right = pavucontrol

[module/cpu]
type = internal/cpu

interval = 0.5

format = <label>
;<ramp-coreload>
 label = CPU %percentage%%

 ramp-coreload-spacing = 1
 ramp-coreload-0 = ▁
 ramp-coreload-1 = ▂
 ramp-coreload-2 = ▃
 ramp-coreload-3 = ▄
 ramp-coreload-4 = ▅
 ramp-coreload-5 = ▆
 ramp-coreload-6 = ▇
 ramp-coreload-7 = █
 

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 98

